{
  "env": {
    "node": true,
    "es2021": true,
    "jest/globals": true
  },
  "extends": ["airbnb-base", "plugin:jest/recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "import/prefer-default-export": "off",
    "import/extensions": ["error", { "js": "ignorePackages" }],
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }]
  },
  "plugins": ["jest"]
}
